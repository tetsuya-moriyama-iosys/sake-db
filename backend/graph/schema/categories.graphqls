type Category {
  id: Int!
  name: String!
  parent: Int
  description: String
  imageUrl: String        # S3に保存された画像のURL
  imageBase64: String     # 縮小された画像のBase64エンコードデータ
  versionNo: Int
  createdAt: DateTime!
  updatedAt: DateTime!
  children: [Category!]
}

extend type Query {
  category(id: Int!): Category!
  categories: [Category!]!
}