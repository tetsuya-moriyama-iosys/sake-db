scalar DateTime
scalar Upload

type Liquor {
  id: String!
  categoryId: Int!
  categoryName: String!
  name: String!
  description: String
  imageUrl: String        # S3に保存された画像のURL
  imageBase64: String     # 縮小された画像のBase64エンコードデータ
  createdAt: DateTime!
  updatedAt: DateTime!
  versionNo: Int!
}

extend type Query {
  liquor(id: String!): Liquor!
  randomRecommendList(limit: Int!): [Liquor!]! #ランダムなリスト
}